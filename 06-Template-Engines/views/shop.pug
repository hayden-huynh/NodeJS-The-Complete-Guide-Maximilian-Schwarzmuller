extends layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/product.css")

block content
  main
    if prods.length > 0
      div.grid
        //- each ... in ... is a flow control statement provided in Pug
        //- prods is the same as the prods property of the object passed to this view from the render function
        each product in prods
          article.card.product-item
            header.card__header
              h1.product__title #{product.title}
            div.card__image
              img(src="https://dictionary.cambridge.org/images/thumb/book_noun_001_01679.jpg?version=5.0.176", alt="A Book")
            div.card__content
              h2.product__price $19.99
              p.product__description A very interesting book about so many even more interesting things!
              div.card__actions
                button.btn Add to Cart
    else
      h1 No products
                